{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Coverage",
            "type": "shell",
            "command": "cargo tarpaulin --out 'Lcov'",
            "group": {
                "kind": "build"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Coverage (HTML)",
            "type": "shell",
            "command": "cargo tarpaulin --out 'Html'",
            "group": {
                "kind": "build"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "command": "cargo clean && cargo build",
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "cargo test",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true,
            }
        },
        {
            "label": "Publish (Windows)",
            "type": "shell",
            "command": "eng/publish.sh --windows",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Publish (Linux)",
            "type": "shell",
            "command": "eng/publish.sh",
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}