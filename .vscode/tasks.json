{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Go",
            "type": "shell",
            "command": "go build -v",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Coverage",
            "type": "shell",
            "command": "go test -v -cover ./...",
            "group": {
                "kind": "test"
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "go test ./...",
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "test",
                "isDefault": true,
            }
        }   ]
}